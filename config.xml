<?xml version='1.0' encoding='utf-8'?>
<widget id="juanfrans.myapp.sample" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SciTropolis</name>
    <description>
        The history of discovery and innovation in New York City.
    </description>
    <author email="juanfrans@gmail.com" href="http://juanfrans.com">
        Juan Francisco Saldarriaga
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <icon src="www/icon.png" />
    <icon height="180" platform="ios" src="www/icon-60@3x.png" width="180" />
    <icon height="60" platform="ios" src="www/icon-60.png" width="60" />
    <icon height="120" platform="ios" src="www/icon-60@2x.png" width="120" />
    <icon height="76" platform="ios" src="www/icon-76.png" width="76" />
    <icon height="152" platform="ios" src="www/icon-76@2x.png" width="152" />
    <icon height="29" platform="ios" src="www/icon-small.png" width="29" />
    <icon height="58" platform="ios" src="www/icon-small@2x.png" width="58" />
    <icon height="40" platform="ios" src="www/icon-40.png" width="40" />
    <icon height="80" platform="ios" src="www/icon-40@2x.png" width="80" />
    <icon height="57" platform="ios" src="www/icon.png" width="57" />
    <icon height="114" platform="ios" src="www/icon@2x.png" width="114" />
    <icon height="72" platform="ios" src="www/icon-72.png" width="72" />
    <icon height="144" platform="ios" src="www/icon-72@2x.png" width="144" />
    <icon height="29" platform="ios" src="www/icon-small.png" width="29" />
    <icon height="58" platform="ios" src="www/icon-small@2x.png" width="58" />
    <icon height="50" platform="ios" src="www/icon-50.png" width="50" />
    <icon height="100" platform="ios" src="www/icon-50@2x.png" width="100" />
    <splash src="www/splash.png" />
    <splash height="480" platform="ios" src="www/Default.png" width="320" />
    <splash height="960" platform="ios" src="www/Default@2x.png" width="640" />
    <splash height="1136" platform="ios" src="www/Default-568h@2x.png" width="640" />
    <splash height="1334" platform="ios" src="www/Default-667h@2x.png" width="750" />
    <splash height="2208" platform="ios" src="www/Default-Portrait-736@3x.png" width="1242" />
    <splash height="1242" platform="ios" src="www/Default-Landscape-736@3x.png" width="2208" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <engine name="android" spec="~5.2.2" />
</widget>
